


 {{> header}}

<div class="card" style="width: 1200px; margin:auto;">
  <div class="card-body">
    <h5 class="card-title-1">Create new product</h5>
    <div class="container" style="margin-top: 50px;">
      <form method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
          </div>
          <div class="form-group col-md-6">
            <label for="price">Price</label>
            <input type="text" class="form-control" value="{{course.price}}" name="price">
          </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="brand">Brand</label>
              <input type="text" class="form-control" value="{{course.brand}}" name="brand">
            </div>
            <div class="form-group col-md-6">
              <label for="description">Description</label>
              <input type="text" class="form-control" value="{{course.description}}" name="description">
            </div>
        </div>  
        <div class="form-group">
            <label for="exampleFormControlFile1">Image</label>
            <input type="text" class="form-control" value="{{course.image}}" name="image">
        </div>
          <button type="submit" class="btn btn-danger"> EDIT</button>
          <button type="submit" class="btn btn-danger" href="/list/stored/create"> BACK</button>
          
      </form>
    </div>
  </div>
</div>