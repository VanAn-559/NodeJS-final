{{> header}}

<div class="card" style="width: 1200px; margin:auto;">
  <div class="card-body">
    <h5 class="card-title-1">Create new product</h5>
    <div class="container" style="margin-top: 50px;">
      <form method="post" action="/customer/{{customer._id}}?_method=PUT">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{customer.name}}" id="name" name="name">
          </div>
          <div class="form-group col-md-6">
            <label for="sdt">Number Phone</label>
            <input type="text" class="form-control" value="{{customer.sdt}}" id="sdt" name="sdt">
          </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="address"><Address></Address></label>
              <input type="text" class="form-control" value="{{customer.address}}" id="address" name="address">
            </div>
            <div class="form-group col-md-6">
              <label for="city">CITY</label>
              <input type="text" class="form-control" value="{{customer.city}}" id="city" name="city">
            </div>
        </div>  
     
          <button type="submit" class="btn btn-danger"> EDIT</button>
          <button type="submit" class="btn btn-danger" href="/me/customer/create"> BACK</button>
          
      </form>
    </div>
  </div>
</div>